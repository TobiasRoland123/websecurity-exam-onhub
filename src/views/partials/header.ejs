<header class="bg-gray-100 shadow">
  <nav class="wrapper mx-auto flex items-center justify-between py-4 px-6">
    <!-- Logo/Home Link -->
    <a href="/" class="text-xl font-bold text-gray-800 hover:text-gray-600">
      Home
    </a>

    <!-- Navigation Links -->
     <ul class="flex space-x-6 text-gray-800">
      <% if (isLoggedIn) { %>
        <% if (role === 'admin') { %>
          <li>
            <a href="/dashboard" class="hover:text-gray-600">Dashboard</a>
          </li>
        <% } else if (role === 'customer') { %>
          <li>
            <a href="/profile" class="hover:text-gray-600">Profile</a>
          </li>
        <% } %>
        <li>
          <button
            id="logoutButton"
            class="hover:text-gray-600 bg-transparent border-none cursor-pointer"
          >
            Logout
          </button>
        </li>
      <% } else { %>
        <li>
          <a href="/login" class="hover:text-gray-600">Login</a>
        </li>
        <li>
          <a href="/signup" class="hover:text-gray-600">Signup</a>
        </li>
      <% } %>
    </ul>
    
  </nav>
</header>